<Window x:Class="PL.productWindow.ProductWindowForCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.productWindow"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ProductWindowForCart" Height="400" Width="300">
    <Grid>
        <Label x:Name="IDLabel"
               Content=":מזהה" 
               HorizontalAlignment="Left" 
               Margin="208,139,0,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-7.932,0.579" Height="25" Width="60" HorizontalContentAlignment="Right"/>

        <TextBox x:Name="IDTextBox"
                 Height="25"
                 Text="{Binding ID}"
                 VerticalAlignment="Top"
                 Margin="34,139,93,0"
                 IsReadOnly="True"
                 IsEnabled="True"/>

        <Label x:Name="NameLabel"
               Content=":שם" 
               HorizontalAlignment="Left" 
               Margin="208,189,0,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-7.932,0.579"
               Height="25" Width="60"
               HorizontalContentAlignment="Right"/>

        <TextBox x:Name="NameTextBox" Height="25"
                 VerticalAlignment="Top"
                 Text="{Binding Name}"
                 Margin="34,189,93,0"
                 IsReadOnly="True"
                 IsEnabled="True"/>

        <Label x:Name="PriceLabel"
               Content=":מחיר" 
               HorizontalAlignment="Left" 
               Margin="208,239,0,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-7.932,0.579"
               Height="25" Width="60"
               HorizontalContentAlignment="Right"/>

        <TextBox x:Name="PriceTextBox"
                 Height="25"
                 VerticalAlignment="Top"
                 Margin="34,239,93,0"
                 Text="{Binding Price}"
                 IsReadOnly="True"
                 IsEnabled="true"/>

        <Label x:Name="AmountOfItemsLabel"
               Content=":כמות" 
               HorizontalAlignment="Left" 
               Margin="208,289,0,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-7.932,0.579"
               Height="25" Width="60"
               HorizontalContentAlignment="Right"/>

        <TextBox x:Name="AmountOfItemTextBox"
                 Height="25"
                 VerticalAlignment="Top"
                 Margin="34,289,93,0"
                 IsReadOnly="True"
                 IsEnabled="true"/>

        <Label x:Name="categoryLabel"
               Content=":קטגוריה" 
               HorizontalAlignment="Right" 
               Margin="0,345,32,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-7.932,0.579"
               Height="25" Width="60"
               HorizontalContentAlignment="Right"/>

        <ComboBox x:Name="categoryComboBox"
                  Margin="34,349,93,10" 
                  Text="{Binding Category}"
                  ItemsSource="{Binding }"
                  IsReadOnly="True"
                  IsEnabled="true" Height="25"/>


        <Button  HorizontalAlignment="Center"
                 Background="AliceBlue"
                 VerticalAlignment="Top"
                 Height="114" Width="98"
                 FontSize="14"
                 Margin="0,10,0,0" >
            <Image x:Name="productImage" Source="{Binding Path=Path}"
                   Width="114"
                   Height="98">
            </Image>
        </Button>
    </Grid>
</Window>
