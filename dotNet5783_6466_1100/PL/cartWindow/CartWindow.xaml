<Window x:Class="PL.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander x:Name="expander" IsExpanded="True"
                                  Background="Transparent"
                                  Foreground="#2b331f">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}"/>
                            </Expander.Header>
                            <ItemsPresenter/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="cartList"
          Background="{DynamicResource MaterialDesignBackground}"
          Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="cartListView"
                  Grid.Row="1"
                  Margin="5,10,10,10"
                  CanUserAddRows="False"
                  materialDesign:DataGridAssist.CellPadding="5"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="30" 
                  IsTextSearchEnabled="True" 
                  AutoGenerateColumns="False" 
                  GridLinesVisibility="Horizontal" 
                  AreRowDetailsFrozen="True"
                  HorizontalGridLinesBrush="Transparent"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  CanUserDeleteRows="False" 
                  CanUserResizeRows="False"
                  Foreground="Black"
                  IsReadOnly="True"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  ItemsSource="{Binding}" MinColumnWidth="10">
            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource ResourceKey=GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="{materialDesign:PackIcon Kind=Trash}"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    HorizontalAlignment="Center"
                                  Click="DeleteProduct_Click" >
                                <materialDesign:PackIcon Kind="Trash" 
                                         Foreground="Black"
                                         Height="30" Width="30"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="מזהה הזמנה"
                                    Binding="{Binding Path= ID}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="שם מוצר"
                                    Binding="{Binding Path= Name}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מזהה מוצר"
                                    Binding="{Binding Path= IDProduct}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מחיר"
                                    Binding="{Binding Path= Price}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="כמות"
                                    Binding="{Binding Path= Amount}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מחיר סופי"
                                    Binding="{Binding Path= TotalPrice}"
                                    MinWidth="10"/>

            </DataGrid.Columns>
        </DataGrid>

        <Grid x:Name="downGrid" Grid.Row="1" Margin="0,349,0,0" Grid.RowSpan="2">
            <Button Content="השלם הזמנה" x:Name="completeCart"
                HorizontalAlignment="Left"
                Margin="589,0,0,0"
                VerticalAlignment="Center" Click="completeCart_Click" RenderTransformOrigin="0.237,0.413"  />
            <Button Content=" מחק סל" x:Name="deleteCart"
                HorizontalAlignment="Left"
                Margin="26,0,0,0"
                VerticalAlignment="Center" Click="deleteCart_Click"/>
        </Grid>
    </Grid>

