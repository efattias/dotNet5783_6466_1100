                    HorizontalAlignment="Left" Margin="28,6,0,61">

            </Button>

            <Button Name="SortByPrice"
                    Content="מיין לפי מחיר"
                    HorizontalAlignment="Left"
                    Width="120"
                    Margin="28,26,0,0"
                      Background="#006bb3"
                    VerticalAlignment="Center" Click="Button_Click_8">

            </Button>
            <Button Name="RemoveGrouping"
                    
                    HorizontalAlignment="Left"
                    Margin="60,103,0,0"
                       Background="#006bb3"
                    VerticalAlignment="Top" Click="RemoveGrouping_Click">
                <materialDesign:PackIcon Kind="RemoveBold">
                    
                </materialDesign:PackIcon>
            </Button>
