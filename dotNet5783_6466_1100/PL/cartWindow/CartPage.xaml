<Page x:Class="PL.cartWindow.CartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.cartWindow" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="CartPage" Height="450" Width="800">
    <Grid x:Name="cartList"
          Background="{DynamicResource MaterialDesignBackground}"
          Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="cartListView"
                  Grid.Row="1"
                  Margin="5,10,10,10"
                
                  materialDesign:DataGridAssist.CellPadding="5"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="30"                   
                  AutoGenerateColumns="False" 
 
                  HorizontalGridLinesBrush="Transparent"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  CanUserDeleteRows="False" 
                  CanUserResizeRows="False"
                  Foreground="Black"
                  IsReadOnly="True"
                 ItemsSource="{Binding Items}"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                   MinColumnWidth="10"
                  MouseDoubleClick="cartListView_MouseDoubleClick">

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="{materialDesign:PackIcon Kind=Trash}"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    HorizontalAlignment="Center"
                                  Click="DeleteProduct_Click" >
                                <materialDesign:PackIcon Kind="Trash" 
                                         Foreground="Black"
                                         Height="30" Width="30"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--<DataGridTemplateColumn Header="{materialDesign:PackIcon Kind=Plus}"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    HorizontalAlignment="Center"
                                  Click="UpdateProduct_Click" >
                                <materialDesign:PackIcon Kind="Plus" 
                                         Foreground="Black"
                                         Height="30" Width="30"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->

                <DataGridTextColumn Header="שם מוצר"
                                    Binding="{Binding Path= Name}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מזהה מוצר"
                                    Binding="{Binding Path= ProductID}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מחיר"
                                    Binding="{Binding Path= Price}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="כמות"
                                    Binding="{Binding Path= Amount}"
                                    MinWidth="10"/>

                <DataGridTextColumn Header="מחיר סופי"
                                    Binding="{Binding Path= TotalPrice}"
                                    MinWidth="10"/>

            </DataGrid.Columns>
        </DataGrid>

        <Grid x:Name="downGrid" Grid.Row="1" Margin="0,349,0,0" Grid.RowSpan="2">
            <Button Content="השלם הזמנה" x:Name="completeCart"
                HorizontalAlignment="left"
                Margin="589,0,0,0"
                VerticalAlignment="Center" Click="completeCart_Click"  >
            </Button>
            <Button x:Name="deleteAllCart"
                    HorizontalAlignment="left"
                    Click="deleteCart_Click"
                    >
                <materialDesign:PackIcon Kind="RemoveShoppingCart"
                                        Width="40"
                                         Height="25">

                </materialDesign:PackIcon>

            </Button>

        </Grid>
    </Grid>

